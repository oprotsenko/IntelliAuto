<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="?android:attr/colorPrimary">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ibMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_music_player_clickable"
        android:text="@string/media_player"
        app:layout_constraintBottom_toTopOf="@+id/ibClimate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ibClimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_climate_controle_clickable"
        android:text="@string/climate_control"
        app:layout_constraintBottom_toTopOf="@+id/ibSettings"
        app:layout_constraintEnd_toEndOf="@+id/ibMusic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ibMusic"
        app:layout_constraintTop_toBottomOf="@+id/ibMusic" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ibSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_settings_clickable"
        android:text="@string/control_settings"
        app:layout_constraintEnd_toEndOf="@+id/ibClimate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ibClimate"
        app:layout_constraintTop_toBottomOf="@+id/ibClimate"
        app:layout_constraintVertical_bias="0.133" />

    <View
        android:id="@+id/vBorder"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>