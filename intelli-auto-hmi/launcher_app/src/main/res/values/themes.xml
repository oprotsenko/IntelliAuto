<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IntelliAutoHMI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray_dark</item>
        <item name="colorPrimaryVariant">@color/blue_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorBackgroundFloating">@color/black_translucent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="popupMenuStyle">@style/PopUpMenuStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
    </style>

    <style name="TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/color_clickable</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="PopUpMenuStyle" parent="ThemeOverlay.MaterialComponents">
        <item name="android:popupBackground">@color/black_translucent</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="placeholderTextColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>